<div id="userPostPage">
	<h1>My Posts</h1>
		<% if (@user.posts.nil? or @user.posts == []) %>
			<h3>Add some posts to your profile!</h3>
		<% else %>
			<% @user.posts.each do |post| %>
				<a class="postPreview" href="/posts/<%= post.id %>">
				<%= image_tag post.picture.url %><br />
				<%= post.caption %></a>
			<% end %>
		<% end %>
</div>
